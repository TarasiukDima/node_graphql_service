{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2017",
    "esModuleInterop": true,
    "outDir": "./build",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./build"],
  "include": ["./src"],
  "ts-node": {
    "esm": true
  }
}
